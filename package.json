{
  "name": "@lopes-software/design-system",
  "version": "1.0.9",
  "main": "dist/design-system.es.js",
  "module": "dist/design-system.umd.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@lopes-software"
  },
  "scripts": {
    "serve": "vite serve",
    "build": "vite build",
    "test:unit": "vitest run --coverage",
    "release": "git push --follow-tags && npm publish",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopes-software/design-system.git"
  },
  "dependencies": {
    "boostrap": "^2.0.0",
    "bootstrap-icons": "^1.11.2",
    "uuid": "^9.0.1",
    "vue": "^3.3.9",
    "vue-datepicker-next": "^1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/eslint-parser": "^7.23.3",
    "@storybook/addon-essentials": "^7.6.4",
    "@storybook/addon-interactions": "^7.6.4",
    "@storybook/addon-links": "^7.6.4",
    "@storybook/blocks": "^7.6.4",
    "@storybook/test": "^7.6.4",
    "@storybook/vue3": "^7.6.4",
    "@storybook/vue3-vite": "^7.6.4",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vitest/coverage-v8": "^1.0.1",
    "@vue/test-utils": "^2.4.3",
    "bootstrap": "^5.1.3",
    "eslint": "^8.55.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-vue": "^9.19.2",
    "flush-promises": "^1.0.2",
    "happy-dom": "^12.10.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.5",
    "storybook": "^7.6.4",
    "vite": "^5.0.4",
    "vitest": "^1.0.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:storybook/recommended",
      "plugin:vue/vue3-essential"
    ],
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ]
    }
  }
}
