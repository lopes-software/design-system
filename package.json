    "babel-jest": "^27.0.6",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "flush-promises": "^1.0.2",
    "jest": "^27.0.5",
    "sass": "^1.49.9",
    "sass-loader": "^10.2.1",
    "vue-cli-plugin-storybook": "^3.0.0-rc.0",
    "vue-template-compiler": "^2.6.14",
    "bootstrap": "^5.1.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
