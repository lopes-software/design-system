{
  "name": "@lopes-software/design-system",
  "version": "0.0.14",
  "main": "dist/design-system.common.js",
  "module": "dist/design-system.umd.min.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@lopes-software"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "npm run build:lib",
    "build:lib": "vue-cli-service build --target lib --name design-system src/index.js",
